@model UserUpdateVM
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Güncelle
        </h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    @*<h5 class="card-header">Default</h5>*@
                    <form method="post" asp-area="Admin" asp-controller="User" asp-action="Add" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="Id" type="hidden" />
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="FirstName" class="form-label">İsim</label>
                                <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen kullanıcı ismini giriniz..." aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="form-label">Soyisim</label>
                                <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen kullanıcı soyismini giriniz..." aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen e-mailini giriniz..." aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">Telefon No</label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen kullanıcının telefon numarasını giriniz..." aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="RoleId" id="defaultFormControlInput" class="form-label">Kullanıcının Rolü</label>
                                <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


            <div class="content-backdrop fade"></div>
        </div>
    </div>
</div>