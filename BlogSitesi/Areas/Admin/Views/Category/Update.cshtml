@model CategoryUpdateVM

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategori Ekle
        </h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    @*<h5 class="card-header">Default</h5>*@
                    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Update" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="card-body">
                            <input asp-for="ID" hidden />
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">Kategori</label>
                                <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen kategori giriniz..." aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="content-backdrop fade"></div>
        </div>
    </div>
</div>